{
    "extends": "astro/tsconfigs/strictest",
    "compilerOptions": {
        "jsx": "preserve",
        "target": "ESNext",
        "module": "node16",
        "declaration": true,
        "declarationDir": "dist",
        "outDir": "dist",
        "moduleResolution": "node16",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true
    },
    "include": [
        "src"
    ]
}